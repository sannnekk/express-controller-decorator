{
	"include": ["src"],
	"exclude": ["node_modules", "**/__tests__/*"],
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"allowJs": true,
		"module": "CommonJS",
		"sourceMap": true,
		"strict": true,
		"declaration": true,
		"skipLibCheck": true,
		"baseUrl": "src",
		"moduleResolution": "node",
		"outDir": "lib",
		"target": "ES5",
		"noUncheckedIndexedAccess": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	}
}
